<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textAlt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Alt:" />

        <EditText
            android:id="@+id/editAlt"
            android:layout_width="50sp"
            android:layout_height="40dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/textUst"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Üst:" />

        <EditText
            android:id="@+id/editUst"
            android:layout_width="50sp"
            android:layout_height="40dp"
            android:inputType="number" >
        </EditText>

        <TextView
            android:id="@+id/textN"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Sayı Adedi:" />

        <EditText
            android:id="@+id/editN"
            android:layout_width="50sp"
            android:layout_height="40dp"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        <CheckBox
            android:id="@+id/chkSirali"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:checked="true"
            android:text="Sıralı/Sırasız" />
        <TextView
            android:id="@+id/textBanko"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Banko(Uğurlu Sayı)(Örneklemlide):" />
        <EditText
            android:id="@+id/editBanko"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:inputType="number" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">
        <Button
            android:id="@+id/btnRasgele6Sayi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Rasgele" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSayisal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Sayısal Loto" />

            <Button
                android:id="@+id/btnSuper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Süper Loto" />

            <Button
                android:id="@+id/btnOn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="On Numara" />

            <Button
                android:id="@+id/btnSans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Şans Topu" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btnTavla"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tavla" />
        <Button
            android:id="@+id/btnTombala"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tombala(Bingo)" />

        <Button
            android:id="@+id/btnYanliSuper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Süper Loto(örneklemli, çıkmış sayılara göre)" />

        <Button
            android:id="@+id/btnYanliCilgin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Çilgin Loto(örneklemli, çıkmış sayılara göre)" />
        </LinearLayout>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Hobi Amaçlı Yapılmış Bir Programdır. Yatırım Tavsiyesi Değildir. Sorumluluk Kullanıcıya Aittir!" />
                />

                <TextView
                    android:id="@+id/txtSansTopu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
